<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>

	<constant name="struts.devMode" value="true"/>
	<constant name="struts.action.extension" value="action,,do"/>
	
	<package name="package1" strict-method-invocation="false" extends="struts-default">
		
		<interceptors>
			<interceptor name="exceptionHandleInterceptor" class="com.hurricane.future.blog.interceptor.ExceptionHandleInterceptor"/>
			<interceptor-stack name="myInterceptor">
				<interceptor-ref name="exceptionHandleInterceptor"/>
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="myInterceptor"/>
		<global-results>
			<result name="error">/WEB-INF/pages/error.jsp</result>
		</global-results>
		
		<action name="index" class="indexAction" method="index">
			<result name="index">/WEB-INF/pages/index.jsp</result>
		</action>
	
		<action name="index_*" class="indexAction" method="{1}">
		</action>
	</package>

</struts>